@model TripAdvertisement.Models.editCustomer

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-group">
    <h2 class="well">Update your preferred Tags</h2>
    @Html.Label("Tags", new { @class = "control-label col-md-2" })
    <span class="col-md-10">
        @foreach (var item in Model.tags)
        {
            <input type="checkbox" name="selectedTags" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                    @Html.Label(item.Value, new { @class = "control-label" })
        }
    </span>
</div>
    <br/>
<br />
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Save" class="btn btn-default" />
    </div>
</div>
}