@model IEnumerable<TripAdvertisement.Models.Locations>


@{ 
    ViewBag.Title= "search View";
    Layout = "~/Views/Shared/layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-inline">
        <h2 class="well">Plan your next adventure</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelForModel("Country", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("ListCountry", null, htmlAttributes: new { @class = "form-control" })
                <div class="text-warning">
                    @ViewBag.error1<br />
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelForModel("City", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("ListCity", null, htmlAttributes: new { @class = "form-control" })
                <div class="text-warning">
                    @ViewBag.error1<br />
                </div>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelForModel("Tags", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.DropDownList("tags", null, htmlAttributes: new { @class = "form-control" })
                <div class="text-warning">
                    @ViewBag.error1<br />
                </div>
            </div>
        </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <input type="submit" value="Search" class="btn btn-info" />
                </div>
            </div>
    </div>
}
@if (ViewBag.error != null)
{
<div class="alert alert-danger">
    @ViewBag.error
</div>
}
@Html.Partial("LocationResults")
<div class="form-group col-md-3">
    <button class="btn btn-info" onclick="location.href='@Url.Action("Index","Search")'">
        <i class="glyphicon glyphicon-backward"></i>
        All Locations
    </button>
</div>